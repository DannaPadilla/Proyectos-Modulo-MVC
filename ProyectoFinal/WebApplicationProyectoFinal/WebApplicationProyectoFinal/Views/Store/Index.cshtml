@using WebApplicationProyectoFinal.Models;
@model List<Store>

@{
    ViewData["Proyecto Final Danna"] = "Index";
}

@if (Model.Count !=0)
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Street</th>
                <th scope="col">Editar</th>
                <th scope="col">Eliminar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var s in Model){
                <tr>
                    <td>@s.Id </td>
                    <td>@s.Name</td>
                    <td>@s.Street</td>
                    <td>
                        <a class="btn btn-primary" asp-area="" asp-controller="Store" asp-action="Update" asp-route-id="@s.Id"
                         asp-route-name="@s.Name"
                         asp-route-adress="@s.Street"> Editar</a>
                    </td>
                    <td>
                        <a class="btn btn-danger" asp-area="" asp-controller="Store" asp-action="Delete" asp-route-id="@s.Id"
                        asp-route-name="@s.Name"
                        asp-route-adress="@s.Street"> Eliminar</a>
                     </td>

                </tr>
            }    
        </tbody>
    </table>
    <a class="btn btn-primary" asp-area="" asp-controller="Store" asp-action="Create">Create Store</a>
}else{
    <div class="card">
        <div class="card-body">
            No hay datos.
        </div>
    </div>
    <a class="btn btn-primary" asp-area="" asp-controller="Store" asp-action="Create">Crear Empresa</a>
}
